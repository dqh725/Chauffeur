<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chauffr">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCKXxMpUIrQkEaKlmnaBP276RBrbTgQGlk" />

        <activity android:name=".Entry">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".registration.Connecting" />
        <activity android:name=".registration.Welcome" />
        <activity
            android:name=".registration.Signup"
            android:label="@string/title_activity_signup"
            android:parentActivityName=".registration.Welcome">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.chauffr.registration.Welcome" />
        </activity>
        <activity android:name=".registration.Signup2" />
        <activity android:name=".registration.Signup3" />
        <activity
            android:name=".home.Login"
            android:label="@string/title_activity_login" />
        <activity android:name=".home.Pickup" />
        <activity
            android:name=".address.HomeAddress"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".address.WorkAddress"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".address.AirportAddress"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".address.OtherAddress"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".home.Dropoff"
            android:label="@string/title_activity_dropoff"
            android:parentActivityName=".home.Pickup"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.chauffr.home.Pickup" />
        </activity>
        <activity
            android:name=".home.DateTimePicker"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".home.AdditionalRequirement"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".home.BookingSummary"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>
