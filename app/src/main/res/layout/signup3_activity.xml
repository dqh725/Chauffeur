<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.chauffr.registration.Signup3">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/validate_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />


    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false">
        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text|number"
                android:digits="0123456789 "
                android:ems="12"
                android:maxLength="19"
                android:hint="Credit Card Number"
                android:id="@+id/credit_card" />
            <LinearLayout
                android:id="@+id/card_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dip"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:hint="Expiry Date"
                    android:focusable="false"
                    android:layout_marginRight="20dip"
                    android:id="@+id/card_expiry_date" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:hint="CVC"
                    android:digits="0123456789"
                    android:maxLength="3"
                    android:layout_marginRight="20dip"
                    android:id="@+id/card_CVC" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dip"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="You don't have to give your credit everytime you travel."
                android:id="@+id/textView3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dip"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="By creating an account you agree to Terms &amp; conditions of  use this app"
                android:id="@+id/textView4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms &amp; conditions"
                android:id="@+id/terms_and_condition"
                android:layout_gravity="center_horizontal" />

            <Button
                android:background="@drawable/chauffeur_btn_active"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create"
                android:onClick="registerClient"
                android:id="@+id/create_new_account_btn"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
